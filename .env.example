# Copiar este archivo a .env y configurar los valores
# cp .env.example .env

# ============================================
# BASE DE DATOS - CONFIGURACION
# ============================================
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/huerto_hogar?useSSL=false&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=usuario_backend
SPRING_DATASOURCE_PASSWORD=usuario_backend_pass
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# ============================================
# JPA / HIBERNATE
# ============================================
# Opciones: create, create-drop, update, validate, none
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.MySQL8Dialect

# ============================================
# JWT - AUTENTICACION
# ============================================
JWT_SECRET=profesorsaavedraporfavorpongame-un-7-en-el-examenporfavorgracias
JWT_EXPIRATION=86400000

# ============================================
# SERVIDOR
# ============================================
SERVER_PORT=8080

# ============================================
# JVM - MEMORIA
# ============================================
JAVA_OPTS=-Xmx512m -Xms256m

# ============================================
# MANAGEMENT / ACTUATOR
# ============================================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info
